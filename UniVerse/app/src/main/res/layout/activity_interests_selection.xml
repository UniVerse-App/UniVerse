<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InterestsSelection">

    <TextView
        android:id="@+id/interests_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What makes you tick?"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="60dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        />

    <TextView
        android:id="@+id/interests_bannerSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select at least 3 types of events you are interested in."
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="60dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/interests_banner"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        />
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/InterestChipsGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/interests_bannerSubtitle">
    </com.google.android.material.chip.ChipGroup>

    <Button
        android:id="@+id/Confirm"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Confirm"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="40dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>