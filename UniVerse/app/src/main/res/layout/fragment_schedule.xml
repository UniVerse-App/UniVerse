<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScheduleFragment">



    <TextView
        android:id="@+id/schedule_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Your Schedule"
        android:layout_margin="20dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/todaysDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle=""
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/schedule_title"
        android:focusable="false"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:cursorVisible="false"
        />
    <ImageView
        android:id="@+id/leftButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toTopOf="@id/todaysDate"
        app:layout_constraintBottom_toBottomOf="@id/todaysDate"
        app:layout_constraintRight_toLeftOf="@id/todaysDate"
        android:src="@drawable/ic_baseline_chevron_left_24">

    </ImageView>

    <ImageView
        android:id="@+id/rightButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toTopOf="@id/todaysDate"
        app:layout_constraintBottom_toBottomOf="@id/todaysDate"
        app:layout_constraintLeft_toRightOf="@id/todaysDate"
        android:src="@drawable/ic_baseline_chevron_right_24">

    </ImageView>

    <ListView
        android:id="@+id/eventList"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/todaysDate"
        app:layout_constraintVertical_bias="0.117"
        tools:layout_editor_absoluteX="20dp">

    </ListView>

    <TextView
        android:id="@+id/emptyElement"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="No events yet..."
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/todaysDate"/>


</androidx.constraintlayout.widget.ConstraintLayout>