<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="4sp"
    app:cardElevation="2sp"
    app:contentPadding="3sp"
    tools:context=".Notification">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/utaLogo"
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:src="@drawable/uta_logo"
            android:contentDescription="UTA_logo"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5sp"
            >

            <TextView
                android:id="@+id/eventNameNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"></TextView>

            <TextView
                android:id="@+id/descriptionNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notification"></TextView>

            <TextView
                android:id="@+id/timeNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time"></TextView>
        </LinearLayout>





    </LinearLayout>

</androidx.cardview.widget.CardView>